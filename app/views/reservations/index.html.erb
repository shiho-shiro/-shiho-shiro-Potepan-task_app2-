<h2>予約したルーム一覧</h2>

<% if flash[:notice] %>
  <div class="flash">
	<%= flash[:notice] %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
	  <th>ルーム画像</th>
	  <th>ルーム名</th>
	  <th>ルーム紹介</th>
	  <th>料金</th>
	  <th>チェックイン</th>
	  <th>チェックアウト</th>
	  <th>予約確定日</th>
	</tr>
  </thead>

  <tbody>
    <% @reservations.each do |reserve| %>
	<% if reserve.user_id == current_user.id %>
	<tr>
	  <% if reserve.room.image.present? %>
	  <td><%= image_tag reserve.room.image.variant(resize:'100x100'), clss: "rooms_icon" %></td>
	<% end %>
	  <td><%= reserve.room.name %></td>
	  <td><%= reserve.room.introduction %></td>
	  <td>¥<%= reserve.room.price %></td>
	  <td><%= reserve.check_in.strftime("%Y年%m月%d日") %></td>
	  <td><%= reserve.check_out.strftime("%Y年%m月%d日") %></td>
	  <td><%= reserve.updated_at.to_s(:datetime_jp) %></td>
	</tr>
<% end %>
<% end %>
  </tbody>
</table>
