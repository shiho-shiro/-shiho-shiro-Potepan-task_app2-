<h2>ルーム情報登録</2>

<%= form_with model: @room do |f| %>
      <table>
        <tr>
          <th><%= f.label :name ,"ルーム名" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :introduction ,"ルーム紹介" %></th>
          <td><%= f.text_area :introduction ,:size=> "50x9" %></td>
        </tr>
        <tr>
          <th><%= f.label :price ,"料金" %></th>
          <td><%= f.number_field :price %></td>
        </tr>
		<tr>
          <th><%= f.label :address ,"住所" %></th>
          <td><%= f.text_field :address %></td>
        </tr>
		<tr>
          <th><%= f.label :image_image ,"ルーム画像" %></th>
          <td><%= f.file_field :room_image %></td>
        </tr>
      </table>
      <div>
        <ul>
          <li><%= f.submit "登録" %></li>
		 <%= link_to "戻る", :rooms %>
        </ul>
      </div>
    <% end %>
