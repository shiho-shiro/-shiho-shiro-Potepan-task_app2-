<h2>登録したルーム一覧</h2>

<% if flash[:notice] %>
  <div class="flash">
	<%= flash[:notice] %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
	  <th>ルーム画像</th>
	  <th>ルーム名</th>
	  <th>ルーム紹介</th>
	  <th>料金</th>
	  <th>作成日</th>
	  <th>削除</th>
	</tr>
  </thead>
  <tbody>
	<% @rooms.each do |room| %>
	<% if room.user_id == current_user.id %>
	<tr>
	<% if room.image.present? %>
	  <td><%= image_tag room.image.variant(resize:'100x100'), clss: "rooms_icon" %></td>
	<% end %>
	  <td><%= link_to room.name , room %></td>
	  <td><%= room.introduction %></td>
	  <td><%= room.price %></td>
	  <td><%= room.updated_at.to_s(:datetime_jp) %></td>
	  <td><%= link_to "削除", room, method: :delete , data:{confirm: "本当に削除しますか？"} %></td>
	</tr>
<% end %>
<% end %>
  </tbody>
</table>

 <%= link_to "ルーム新規登録", :new_room %>
